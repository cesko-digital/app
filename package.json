{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:types": "tsc --noemit",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.3.5",
    "airtable": "^0.12.2",
    "clsx": "^2.0.0",
    "file-system-cache": "^2.4.4",
    "ical-generator": "^6.0.0",
    "next": "14.0.1",
    "plausible-tracker": "^0.3.8",
    "react": "^18",
    "react-dom": "^18",
    "react-lite-youtube-embed": "^2.3.52",
    "react-select": "^5.8.0",
    "slack-markdown": "^0.3.0",
    "typescript-json-decoder": "^1.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "dotenv-flow": "^4.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended"
    ],
    "rules": {
      "no-undef": "off",
      "no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "quoteProps": "consistent"
  }
}
